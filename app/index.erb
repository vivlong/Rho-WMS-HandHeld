<div data-role="page" data-url="<%= Rho::Application.startURI %>/">
	<script src="/public/JsController/Login.js" type="text/javascript"></script> 
	<div data-role="header" data-position="inline">
		<h5 class="text-center">SysFreight WMS</h5>
	</div>

	<div data-role="content">
	  <form role="form" id="LoginForm">
		<div class="form-group">
		  <label for="strUserName" class="control-label small">User ID</label>
		  <input type="text" class="form-control input-sm" id="strUserName" name="strUserName" placeholder="Enter UserID">
		</div>
		<div class="form-group Margin-Top-m10">
		  <label for="strPassword" class="control-label small">Password</label>
		  <input type="password" class="form-control input-sm" id="strPassword" name="strPassword" placeholder="Enter Password">
		</div>
		<div class="form-group Margin-Top-m10">
		  <label for="strServerAddress" class="control-label small">WebSite</label>
		  <input type="text" class="form-control input-sm" id="strServerAddress" name="strServerAddress" placeholder="Enter WebSite">
		</div>
		<div class="form-group Margin-Top-m10">
		  <label for="strCatalog" class="control-label small">Site</label>
		  <input type="text" class="form-control input-sm" id="strCatalog" name="strCatalog" placeholder="Enter Site">
		</div>
		<div class="form-group hidden">
		  <label for="strResult" class="control-label small">Result</label>
		  <input type="text" class="form-control input-sm" id="strResult" name="strResult" placeholder="Site" value="1">
		</div>
		<div class="checkbox Margin-Top-m10">
		  <label><input type="checkbox" id="QuickLogin">Quick Login</label>
		</div>
		<button type="button" class="btn btn-default btn-sm btn-block Margin-Top-m10" id="Connect" onclick="Connecting();">Connect</button>
	  </form>
	</div>

</div>